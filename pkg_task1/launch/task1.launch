<launch>
	<arg name="record" default="false"/>
	<arg name="rec_name" default="turtle_record.bag"/>


	<node pkg="pkg_task1" type="shell_webpages_launch.sh" name="shell_webpage_launch" output="screen">
		<param name="cmd" value="$(find pkg_task1)/launch/shell_webpages_launch.sh"/>
	</node>
	<rosparam file ="$(find pkg_ros_iot_bridge)/config/config_pyiot.yaml"/>

	<node pkg="pkg_ros_iot_bridge" type="node_action_server_ros_iot_bridge.py" name="node_action_server_ros_iot_bridge" output="screen"/>
	
	<node pkg="turtlesim" type="turtlesim_node" name="node_turtlesim_node" output="screen"/>
	
	<node pkg="pkg_task1" type="node_simple_action_server_turtle.py" name="node_simple_action_server_turtle" output="screen"/>
	
	<node pkg="pkg_task1" type="node_iot_action_client_turtle.py" name="node_iot_action_client_turtle" output="screen"/>

	<group if="$(arg record)">    

		<node name="rosbag_record_turtle" pkg="rosbag" type="record"
		 args="record -O $(find pkg_task1)/bag_files/$(arg rec_name) --chunksize=10  /action_turtle/goal /action_turtle/result /action_ros_iot/goal /ros_iot_bridge/mqtt/sub /turtle1/cmd_vel /turtle1/pose" output="screen"/>

	</group>

</launch>